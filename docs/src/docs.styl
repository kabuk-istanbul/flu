@import 'vars'
@import '../../flu'
@import 'layout/*'

.app
  -flu-position: fixed right 3rem left
  -flu-size: 100px 200px
  -flu-transition: width height

.menu
  -flu-menu: basic
  line-height: 1.5rem
  -flu-block-width: base

.list
  -flu-list: basic
  &.-bullet
    -flu-list-style: bullet


.container
  -flu-display: container

-include-button({
  styles : link outlined filled simple,
  colors : $brand-colors['primary'] $ui-colors[success],
  sizes : big
})

-include-text-box({
  styles: basic underlined,
  sizes : big
})

-include-select-box()

-include-grid()