// BASE SETTINGS

// You have to set this vars at first

$base-font-size         = 0.875rem // 14px Base font size of document
$base-line-height       = 1.25rem // 20px Base line height of document

$base-block-height      = 2rem // 32px Base height of block elements like button, text box and pickers
$magic-unit             = 0.25rem // :)


// Colors

$brand-colors  = {
  'primary'             : #2574FF,
  'secondary'           : #E3E9EA
}

$ui-colors = {
  'success'             : #1BB55B,  // green
  'warning'             : #EFC000,  // yellow
  'danger'              : #FC5442,  // red
  'primary'             : #4285F4,  // blue
  'black'               : #283A51,  // black
  'white'               : #FFFFFF   // white
}

$text-color             = tint($ui-colors['black'], 6%)
$link-color             = $ui-colors['primary']


// Typography

$text-font-family       = -apple-system, BlinkMacSystemFont, "Segoe UI", "Oxygen", "Ubuntu", Helvetica Neue, Roboto, sans-serif
$title-font-family      = $text-font-family
$monospaced-font-family = 'Menlo', 'Consolas', monospace


// Other

$base-medium            = tablet // Default medium for media queries. This must be palm for mobile-first methodology.

$base-border-width      = 0.0625rem // Default border-width property for any borders.
$base-border-radius     = 0.125rem // Default border-radius property for any element has border radius