-flu-input-style-basic()
  -flu-input-base()
  background-color: $input-bg-color
  border-width: $input-border-width
  border-style: solid
  border-color: $input-border-color
  border-radius: $input-border-radius
  box-shadow: $input-shadow if $input-shadow
  -flu-transition: color background-color border-color
  input-style: 'basic'

  &::input-placeholder
    color: $input-placeholder-color
    opacity: 1

  &:not(.{$input-error-class}):not(.{$input-success-class}):not([disabled]):not([readonly]):not(:focus):hover
    color: $input-hover-color unless @color == $input-hover-color
    background-color: $input-hover-bg-color unless @background-color == $input-hover-bg-color
    border-color: $input-hover-border-color unless @border-color == $input-hover-border-color
    box-shadow: $input-hover-shadow unless @box-shadow == $input-hover-shadow

  &:not(.{$input-error-class}):not(.{$input-success-class}):not([readonly]):focus
    color: $input-focus-color unless @color == $input-focus-color
    background-color: $input-focus-bg-color unless @background-color == $input-focus-bg-color
    border-color: $input-focus-border-color unless @border-color == $input-focus-border-color
    box-shadow: $input-focus-shadow unless @box-shadow == $input-focus-shadow

  &[disabled],
  [disabled] &
    cursor: not-allowed
    color: $input-disabled-color unless @color == $input-disabled-color
    background-color: $input-disabled-bg-color unless @background-color == $input-disabled-bg-color
    border-color: $input-disabled-border-color unless @border-color == $input-disabled-border-color
    box-shadow: $input-disabled-shadow unless @box-shadow == $input-disbled-shadow

  &[readonly]
    box-shadow: none

  &.{$input-success-class}
    color: $input-success-color unless @color == $input-success-color
    background-color: $input-success-bg-color unless @background-color == $input-success-bg-color
    border-color: $input-success-border-color unless @border-color == $input-success-border-color
    box-shadow: $input-success-shadow unless @box-shadow == $input-success-shadow

  &.{$input-error-class}
    color: $input-error-color unless @color == $input-error-color
    background-color: $input-error-bg-color unless @background-color == $input-error-bg-color
    border-color: $input-error-border-color unless  @border-color == $input-error-border-color
    box-shadow: $input-error-shadow unless @box-shadow == $input-error-shadow
