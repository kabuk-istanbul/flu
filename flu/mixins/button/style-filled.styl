-flu-button-style-filled()
  -flu-button-base()
  background-image: none if @background-image == null
  border-width: 0 if @border-width == null
  border-style: none if @border-style == null
  border-radius: $button-border-radius if @border-radius == null
  -flu-transition: color background-color box-shadow
  button-style: 'filled'

-flu-button-color-filled($background-color, $color = #FFFFFF)
  color: $color unless @color == $color
  background-color: $background-color
  box-shadow: 0 0 0 rgba(0,0,0,0)
  &:hover
    background-color: shade($background-color, 5%)
    box-shadow: 0 0.0625rem 0.125rem rgba($background-color, 0.5)
  &:active,
  &.-active
    background-color: shade($background-color, 10%)
    box-shadow: inset 0 0.0625rem 0.125rem rgba(black, 0.15)